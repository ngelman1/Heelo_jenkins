// scripted_try/Jenkinsfile - Part 2: Checkout and Stages for Visualization

node {
    // Checkout SCM (Source Code Management)
    stage('Checkout') { // 'stage' block for visualization
        echo 'Checking out source code...'
        // 'checkout scm' is a special step that tells Jenkins to check out the SCM
        // configured for this job (your Git repo).
        checkout scm
        echo 'Source code checked out successfully.'
        sh 'ls -F' // List files in the workspace to confirm checkout
    }

    stage('Build') {
        echo 'Starting the build process...'
        sh 'echo "Simulating application compilation..."'
    }

    stage('Test') {
        echo 'Running automated tests...'
        sh 'echo "Running unit and integration tests..."'
    }

    stage('Deploy') {
        echo 'Initiating deployment...'
        sh 'echo "Deploying to development environment..."'
    }
}